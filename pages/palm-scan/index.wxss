.container {
  padding: 20px;
}

.palm-scan-area {
  position: relative;
  width: 600rpx;
  height: 600rpx;
  margin: 0 auto;
}

.palm-scan-area .camera {
  width: 100%;
  height: 100%;
}

.palm-scan-area .scan-box {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.palm-scan-area .scan-box .palm-outline {
  width: 100%;
  height: 100%;
  opacity: 0.5;
}

.button-group {
  margin-top: 40rpx;
  display: flex;
  justify-content: space-around;
}

.button-group button {
  width: 280rpx;
  margin: 0;
}

.button-group .scan-btn {
  background-color: #1AAD19;
  color: white;
}

.button-group .match-btn {
  background-color: #576B95;
  color: white;
}

.button-group .match-btn[disabled] {
  background-color: #ccc;
}

.result-area {
  margin-top: 40rpx;
  text-align: center;
}

.result-area .result-text {
  font-size: 32rpx;
  color: #333;
}