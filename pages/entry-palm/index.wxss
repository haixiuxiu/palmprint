.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 20px;
  }
  
.tip-area {
  width: 100%;
  padding: 20rpx;
  background-color: #EAF3FF;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
}

.tip-text {
  margin-left: 10rpx;
  font-size: 28rpx;
  color: #576B95;
}

  .header {
    text-align: center;
    margin-bottom: 20px;
  }
  
  .avatar {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    margin-bottom: 10px;
  }
  
  .nickname {
    font-size: 18px;
    font-weight: bold;
    color: #333;
  }

  .form {
    width: 90%; /* 设置表单宽度 */
    padding: 20px;
    margin-top: 20%;
    background-color: white; /* 表单背景色 */
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1); /* 添加阴影 */
    border-radius: 8px; /* 圆角 */
    box-sizing: border-box; /* 包括内边距在内计算宽度 */
  }
  
  .form-item {
    margin-bottom: 20px;
  }
  
  .label {
    display: block;
    font-size: 16px;
    margin-bottom: 10px;
    color: #555;
  }
  
  input {
    width: 90%;
    padding: 10px;
    font-size: 16px;
    border: 1px solid #ddd;
    border-radius: 5px;
  }
  
  .hand-selection {
    display: flex;
    justify-content: space-between;
  }
  
  .hand-item {
    flex: 1;
    text-align: center;
    padding: 10px;
    border: 1px solid #ddd;
    border-radius: 5px;
    margin: 0 5px;
    cursor: pointer;
    transition: all 0.3s ease;
  }
  
  .hand-item.selected {
    border-color: #007aff;
    background-color: #e6f7ff;
  }
  
  .hand-icon {
    width: 50px;
    height: 50px;
    margin-bottom: 5px;
  }
  
  .start-btn {
    width: 100%;
    padding: 15px;
    background: linear-gradient(to top, #209cff 0%, #68e0cf 100%);
    color: black;
    font-size: 18px;
    text-align: center;
    border: none;
    border-radius: 5px;
  }
  
  .content {
    padding-bottom: 100px;
  }

.tabbar-item-container {
  display: flex;
  flex-direction: column; 
  align-items: center;    
}

.tabbar-icon {
  width: 24px;
  height: 24px;
  margin-bottom: 4px; 
}

