.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 20px;
  }
  
  /* 提示区域样式 */
.tip-area {
  width: 100%;
  padding: 20rpx;
  background-color: #EAF3FF;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
}

.tip-text {
  margin-left: 10rpx;
  font-size: 28rpx;
  color: #576B95;
}

  .header {
    text-align: center;
    margin-bottom: 20px;
  }
  
  .avatar {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    margin-bottom: 10px;
  }
  
  .nickname {
    font-size: 18px;
    font-weight: bold;
    color: #333;
  }
  
  .form {
    width: 100%;
    max-width: 400px;
  }
  
  .form-item {
    margin-bottom: 20px;
  }
  
  .label {
    display: block;
    font-size: 16px;
    margin-bottom: 10px;
    color: #555;
  }
  
  input {
    width: 100%;
    padding: 10px;
    font-size: 16px;
    border: 1px solid #ddd;
    border-radius: 5px;
  }
  
  .hand-selection {
    display: flex;
    justify-content: space-between;
  }
  
  .hand-item {
    flex: 1;
    text-align: center;
    padding: 10px;
    border: 1px solid #ddd;
    border-radius: 5px;
    margin: 0 5px;
    cursor: pointer;
    transition: all 0.3s ease;
  }
  
  .hand-item.selected {
    border-color: #007aff;
    background-color: #e6f7ff;
  }
  
  .hand-icon {
    width: 50px;
    height: 50px;
    margin-bottom: 5px;
  }
  
  .start-btn {
    width: 100%;
    padding: 15px;
    background-color: #007aff;
    color: #fff;
    font-size: 18px;
    text-align: center;
    border: none;
    border-radius: 5px;
  }
  
  .content {
    padding-bottom: 100px;
  }

/* tabbar-item-container 用于垂直排列图标和文字 */
.tabbar-item-container {
  display: flex;
  flex-direction: column;  /* 设置垂直排列 */
  align-items: center;     /* 水平居中对齐 */
}

/* 设置图标的大小 */
.tabbar-icon {
  width: 24px;
  height: 24px;
  margin-bottom: 4px;  /* 图标和文字之间的间距 */
}

