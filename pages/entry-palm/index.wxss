.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 20px;
  }
  
  .header {
    text-align: center;
    margin-bottom: 20px;
  }
  
  .avatar {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    margin-bottom: 10px;
  }
  
  .nickname {
    font-size: 18px;
    font-weight: bold;
    color: #333;
  }
  
  .form {
    width: 100%;
    max-width: 400px;
  }
  
  .form-item {
    margin-bottom: 20px;
  }
  
  .label {
    display: block;
    font-size: 16px;
    margin-bottom: 10px;
    color: #555;
  }
  
  input {
    width: 100%;
    padding: 10px;
    font-size: 16px;
    border: 1px solid #ddd;
    border-radius: 5px;
  }
  
  .hand-selection {
    display: flex;
    justify-content: space-between;
  }
  
  .hand-item {
    flex: 1;
    text-align: center;
    padding: 10px;
    border: 1px solid #ddd;
    border-radius: 5px;
    margin: 0 5px;
    cursor: pointer;
    transition: all 0.3s ease;
  }
  
  .hand-item.selected {
    border-color: #007aff;
    background-color: #e6f7ff;
  }
  
  .hand-icon {
    width: 50px;
    height: 50px;
    margin-bottom: 5px;
  }
  
  .start-btn {
    width: 100%;
    padding: 15px;
    background-color: #007aff;
    color: #fff;
    font-size: 18px;
    text-align: center;
    border: none;
    border-radius: 5px;
  }
  