.container {
    padding: 20px;
    text-align: center;
  }
  
  .header {
    font-size: 20px;
    margin-bottom: 10px;
  }
  
  .content {
    margin-bottom: 20px;
  }
  
  .palm-scan-area {
    position: relative;
    width: 100%;
    height: 300px;
    margin-bottom: 20px;
    overflow: hidden;
  }
  
  .camera {
    width: 100%;
    height: 100%;
  }
  
  .scan-box {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
  }
  
  .palm-outline {
    position: absolute;
    width: 80%;
    height: auto;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    opacity: 0.7;
  }
  
  .scan-line {
    position: absolute;
    width: 80%;
    height: 2px;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    background: green;
    animation: scan 2s linear infinite;
  }
  
  .progress-container {
    margin: 20px 0;
  }
  
  .actions button {
    margin: 10px 5px;
  }
  